<div class="container storleden-module allprojects block">

        <div class="row">
        <div class="small">
             <div align="center" class="btn-group filterDiv" role="group">
                <button class="btn btn-default  label1 filter-btn" >FILTRERA</button>
                <button class="btn btn-default label2" ><span class="glyphicon glyphicon-triangle-right"></button>
                <button class="btn btn-default filter-button mybtn small-btn  all" data-filter="all">All</button>
                {% for cat in cats %}
                   <button class="btn btn-default filter-button mybtn small-btn hidden" data-filter="{{cat | replace(' ', '-') }}">{{cat}}</button> 
                {% endfor %}                

            </div>       
        </div>  
        <div class="big">
             <div align="center" class="btn-group filterDiv" role="group">
                <button class="btn btn-default  label1" >FILTRERA</button>
                <button class="btn btn-default label2" ><span class="glyphicon glyphicon-triangle-right"></button>
                <button class="btn btn-default filter-button mybtn all" data-filter="all">All</button>
                {% for cat in cats %}
                   <button class="btn btn-default filter-button mybtn" data-filter="{{cat | replace(' ', '-')}}">{{cat}}</button> 
                {% endfor %}
                
                
            </div>       
        </div>    
        
        <br/>

            {% for node in nodes %}
                <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter {{node.cat | replace(' ', '-')}} ">
                    <div class="outer">                        
                        <img src="{{ node.img }}" class="img-responsive">
                        <div class="over">
                            <div class="over-title">{{node.title}}</div> 
                            <div class="ingress">{{node.ingress}}</div> 
                        </div>
                    </div>                
                    
                </div>                
            {% endfor %}


        </div>
    </div>

   


   
